<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Fontawesome -->
<link
href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
rel="stylesheet"
/>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="css/estyle.css">
    <title>Inicio</title>
  </head>
  <body>
    <!-- Header -->
      {{> header}}
    <!-- End Header -->

    <!-- Page content -->
    <div class="container"> 
      <section id="titulo" class="mb-5 mt-5">
        <h1>Mis contactos</h1>
        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16" 
         data-bs-toggle="modal" data-bs-target="#modalAdd">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
        </svg>
      </section>
   
      <div class="alert alert-light d-none" role="alert" id="alertCont">
        A simple light alert—check it out!
      </div>

      <div id="contTable" class="">
        <table class="table table-hover" id="table">
          <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Apellido</th>
              <th scope="col">Número</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            {{#each contactos}}
            <tr>
              <td>{{NombreContacto}}</td>
              <td>{{ApellidoContacto}}</td>
              <td>{{Numero}}</td>

              <td class="text-center">
                <a href="/agenda/edit/{{IdContacto}}" class="btn btn-primary mb-1">
                <i class="fa fa-pencil"></i>
                </a>
                <a href="/agenda/delete/{{IdContacto}}" class="btn btn-danger mb-1">
                  <i class="fa fa-trash"></i>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    </div>
    
    <!-- End page content -->

    <!-- Modal Add -->
    <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Añadir contacto</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">

            <div class="alert alert-danger d-none" role="alertAdd">
              A simple danger alert—check it out!
            </div>

            <form action = "/agenda/guardar" method="post"> 
              <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label fs-5">Nombre</label>
              <input type="text" class="form-control" placeholder="Nombre" name="txtNombre" id="txtNombre">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label fs-5">Apellido</label>
                <input type="text" class="form-control" placeholder="Apellido" name="txtApellido" id="txtApellido">
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label fs-5">Número de telefono</label>
                <input type="tel" class="form-control" placeholder="Número" name="txtNumero">
              </div> 
              <div class="modal-footer">
                <button type="submit" class="btn btn-success w-100 fs-5">Guardar</button>
              </div>
            </form>
    
          </div>
        </div>
      </div>
    </div>
    <!-- End Modal Add -->

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    {{!-- <script src="js/app.js"></script> --}}
  </body>
</html>
